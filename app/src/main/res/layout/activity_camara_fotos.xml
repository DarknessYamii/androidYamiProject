<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/estelarfondo"
    tools:context=".camara_fotos">

    <ImageView
        android:id="@+id/imagenPrevia"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/bolacristal"
        app:layout_constraintBottom_toTopOf="@+id/camaraBoton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bolacristal" />

    <ImageButton
        android:id="@+id/camaraBoton"
        android:layout_width="133dp"
        android:layout_height="142dp"
        android:layout_marginStart="143dp"
        android:layout_marginEnd="116dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/camrafoto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenPrevia"
        app:srcCompat="@drawable/camara"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>